<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fm.fm.dao.SysUserProjectRelationDao">

    <sql id="Base_Column_List">
        user_id, project_id        
    </sql>

    <sql id="where">
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="projectId != null">
                and project_id = #{projectId}
            </if>
        </where>
    </sql>

    <sql id="whereForMap">
        <where>
            <if test="map.userId != null">
                and user_id = #{map.userId}
            </if>
            <if test="map.projectId != null">
                and project_id = #{map.projectId}
            </if>
        </where>
    </sql>

    <!--通过Map作为筛选条件分页查询-->
    <select id="findPageForMap" resultType="org.fm.fm.bo.SysUserProjectRelationBO">
        select
        <include refid="Base_Column_List"/>
        from sys_user_project_relation
        <include refid="whereForMap"/>
    </select>

    <!--通过Map作为筛选条件查询所有-->
    <select id="findListForMap" resultType="org.fm.fm.bo.SysUserProjectRelationBO">
        select
        <include refid="Base_Column_List"/>
        from sys_user_project_relation
        <include refid="whereForMap"/>
    </select>

</mapper>